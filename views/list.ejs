<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach((newListItems)=>{ %>
          <form action="/delete" method="post">
                <div class="item">
              <input type="checkbox" onchange="this.form.submit()" name="checkbox" value= "<%= newListItems.id %>">
              <input type="hidden" value="<%= listTitle %>" name="listTitle">
              <p><%=  newListItems.name  %></p>
            </div>
          </form>
    <% }) %>
      


      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
